{
  "name": "sqli-kb-astro",
  "type": "module",
  "version": "1.0.0",
  "description": "SQL Injection Knowledge Base",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:standalone": "cross-env STANDALONE=true astro build",
    "preview": "astro preview",
    "lint": "eslint . && stylelint 'src/**/*.css' && markdownlint 'src/content/**/*.md' && prettier --check .",
    "lint:fix": "eslint --fix . && stylelint --fix 'src/**/*.css' && markdownlint --fix 'src/content/**/*.md' && prettier --write .",
    "typecheck": "astro check",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "keywords": [
    "SQL Injection",
    "SQLi",
    "Knowledge Base",
    "Security",
    "Web Security"
  ],
  "author": "WebsecLabs",
  "license": "MIT",
  "dependencies": {
    "@astrojs/sitemap": "^3.7.0",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "astro": "^5.16.11",
    "rehype-slug": "^6.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "markdownlint-cli": "^0.46.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
