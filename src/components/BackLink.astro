---
/**
 * BackLink component - Reusable navigation link to return to the knowledge base home.
 * Extracts common navigation pattern used across all entry pages.
 */
---

<div class="entry-navigation">
  <a href={import.meta.env.BASE_URL} class="back-link">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12 19 5 12 12 5"></polyline>
    </svg>
    Back to Knowledge Base
  </a>
</div>

<style>
  .entry-navigation {
    margin-top: 2rem;
    margin-bottom: 4rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    color: var(--color-primary);
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .back-link:hover {
    background-color: #edf2f7;
    text-decoration: none;
  }
</style>
