---
import { type CollectionEntry } from "astro:content";
// Note: transition:animate directives use built-in Astro values, no import needed

interface Props {
  entry: CollectionEntry<"mysql" | "mariadb" | "mssql" | "oracle" | "postgresql" | "extras">;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<article class="markdown-entry" transition:animate="slide">
  <header class="entry-header">
    <h1 transition:name={`title-${entry.collection}-${entry.slug}`}>{entry.data.title}</h1>
    {
      entry.data.description && (
        <p class="entry-description" transition:name={`desc-${entry.collection}-${entry.slug}`}>
          {entry.data.description}
        </p>
      )
    }

    <div class="entry-meta" transition:animate="fade">
      <span class="entry-category">{entry.data.category}</span>
      {
        entry.data.lastUpdated && (
          <span class="entry-date">
            Last updated:{" "}
            {entry.data.lastUpdated.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })}
          </span>
        )
      }
    </div>

    {
      entry.data.tags && entry.data.tags.length > 0 && (
        <div class="entry-tags" transition:animate="fade">
          {entry.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )
    }
  </header>

  <div class="entry-content" transition:animate="slide">
    <Content />
  </div>
</article>

<style>
  .markdown-entry {
    background-color: var(--color-card-bg);
    border-radius: 8px;
    box-shadow: var(--shadow);
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .entry-header {
    margin-bottom: 2rem;
  }

  .entry-header h1 {
    margin-top: 0;
    font-size: 2rem;
    color: var(--color-primary);
    border-bottom: none;
  }

  .entry-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .entry-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--color-text-light);
  }

  .entry-category {
    font-weight: 500;
    color: var(--color-accent);
  }

  .entry-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    display: inline-block;
    background-color: var(--color-sidebar-bg);
    color: var(--color-text-muted);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .entry-content {
    font-size: 1rem;
    line-height: 1.6;
  }

  .entry-content :global(h2) {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-heading-3);
  }

  .entry-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-heading-3);
  }

  .entry-content :global(p) {
    margin-bottom: 1rem;
  }

  .entry-content :global(a) {
    color: var(--color-primary);
    text-decoration: none;
  }

  .entry-content :global(a:hover) {
    text-decoration: underline;
  }

  .entry-content :global(ul),
  .entry-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .entry-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .entry-content :global(blockquote) {
    border-left: 4px solid var(--color-border-light);
    padding-left: 1rem;
    margin-left: 0;
    margin-right: 0;
    color: var(--color-text-muted);
  }

  .entry-content :global(pre) {
    background-color: var(--color-code-bg);
    border-radius: 6px;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
    border: 1px solid var(--color-border);
  }

  .entry-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background-color: var(--color-sidebar-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
  }

  .entry-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
  }

  .entry-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
    font-size: 0.95rem;
  }

  .entry-content :global(th),
  .entry-content :global(td) {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
  }

  .entry-content :global(th) {
    background-color: var(--color-table-header-bg);
    font-weight: 600;
    text-align: left;
  }

  .entry-content :global(tr:nth-child(even)) {
    background-color: var(--color-table-row-alt);
  }

  .entry-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1rem 0;
  }
</style>
