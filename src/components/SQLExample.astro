---
interface Props {
  code: string;
  explanation?: string;
  notes?: string[];
}

const { code, explanation, notes = [] } = Astro.props;

// Process the code to highlight injection parts (marked with <injection></injection>)
function processCode(code: string) {
  return code.replace(/<injection>(.*?)<\/injection>/g, '<span class="injection">$1</span>');
}
---

<div class="sql-example">
  {explanation && <p class="example-explanation">{explanation}</p>}

  <div class="modern-code-block">
    <div class="code-header">
      <span class="code-label">SQL</span>
      <div class="fake-buttons">
        <span></span><span></span><span></span>
      </div>
    </div>
    <pre class="code-content"><code class="language-sql" set:html={processCode(code)} /></pre>
  </div>

  {
    notes.length > 0 && (
      <div class="example-notes">
        <h4>Notes:</h4>
        <ul>
          {notes.map((note) => (
            <li set:html={note} />
          ))}
        </ul>
      </div>
    )
  }
</div>

<style>
  .sql-example {
    margin: 1.25rem 0;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .example-explanation {
    margin: 0;
    padding: 0.75rem 1rem;
    font-style: italic;
    border-bottom: 1px solid #edf2f7;
  }

  .modern-code-block {
    margin: 0;
    background-color: #f8fafc;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: #edf2f7;
    border-bottom: 1px solid #e2e8f0;
  }

  .code-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #4a5568;
  }

  .fake-buttons {
    display: flex;
    gap: 6px;
  }

  .fake-buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: block;
  }

  .fake-buttons span:nth-child(1) {
    background-color: #fc8181;
  }

  .fake-buttons span:nth-child(2) {
    background-color: #f6e05e;
  }

  .fake-buttons span:nth-child(3) {
    background-color: #68d391;
  }

  .code-content {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
  }

  .example-notes {
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    background-color: #f8fafc;
    border-top: 1px solid #edf2f7;
  }

  .example-notes h4 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    color: #4a5568;
  }

  .example-notes ul {
    margin: 0;
    padding-left: 1.5rem;
  }

  .injection {
    background-color: rgba(237, 100, 166, 0.1);
    color: #d53f8c;
    font-weight: bold;
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
  }
</style>
