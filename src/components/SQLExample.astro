---
import { escapeHtml } from "../utils/htmlEscape";

interface Props {
  code: string;
  explanation?: string;
  notes?: string[];
}

const { code, explanation, notes = [] } = Astro.props;

// Process the code to highlight injection parts (marked with <injection></injection>)
// First escape HTML to prevent XSS, then process injection markers
function processCode(rawCode: string) {
  // Extract injection markers, escape everything, then restore markers as safe spans
  const INJECTION_PLACEHOLDER = "\x00INJECTION\x00";
  const injections: string[] = [];

  // Temporarily replace injection tags with placeholders
  const withPlaceholders = rawCode.replace(/<injection>(.*?)<\/injection>/g, (_, content) => {
    injections.push(content);
    return INJECTION_PLACEHOLDER;
  });

  // Escape all HTML in the code
  const escaped = escapeHtml(withPlaceholders);

  // Restore injection markers as safe spans with escaped content
  let i = 0;
  return escaped.replace(new RegExp(INJECTION_PLACEHOLDER, "g"), () => {
    const content = escapeHtml(injections[i++]);
    return `<span class="injection">${content}</span>`;
  });
}
---

<div class="sql-example">
  {explanation && <p class="example-explanation">{explanation}</p>}

  <div class="modern-code-block">
    <div class="code-header">
      <span class="code-label">SQL</span>
      <div class="fake-buttons">
        <span></span><span></span><span></span>
      </div>
    </div>
    <pre class="code-content"><code class="language-sql" set:html={processCode(code)} /></pre>
  </div>

  {
    notes.length > 0 && (
      <div class="example-notes">
        <h4>Notes:</h4>
        <ul>
          {notes.map((note) => (
            <li>{note}</li>
          ))}
        </ul>
      </div>
    )
  }
</div>

<style>
  .sql-example {
    margin: 1.25rem 0;
    background-color: var(--color-card-bg);
    border-radius: 8px;
    box-shadow: var(--shadow);
    overflow: hidden;
  }

  .example-explanation {
    margin: 0;
    padding: 0.75rem 1rem;
    font-style: italic;
    border-bottom: 1px solid var(--color-border);
  }

  .modern-code-block {
    margin: 0;
    background-color: var(--color-code-bg);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: var(--color-sidebar-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .code-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .fake-buttons {
    display: flex;
    gap: 6px;
  }

  .fake-buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: block;
  }

  .fake-buttons span:nth-child(1) {
    background-color: var(--color-mac-red);
  }

  .fake-buttons span:nth-child(2) {
    background-color: var(--color-mac-yellow);
  }

  .fake-buttons span:nth-child(3) {
    background-color: var(--color-mac-green);
  }

  .code-content {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
  }

  .example-notes {
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    background-color: var(--color-code-bg);
    border-top: 1px solid var(--color-border);
  }

  .example-notes h4 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    color: var(--color-text-muted);
  }

  .example-notes ul {
    margin: 0;
    padding-left: 1.5rem;
  }

  .injection {
    background-color: var(--color-injection-bg);
    color: var(--color-injection-text);
    font-weight: bold;
    padding: 0.125rem 0.25rem;
    border-radius: 3px;
  }
</style>
