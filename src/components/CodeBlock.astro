---
interface Props {
  code: string;
  language?: string;
  title?: string;
  highlightLines?: number[];
}

const { code, language = "sql", title, highlightLines = [] } = Astro.props;

// Split code into lines for line-level highlighting
const lines = code.split("\n");

// Normalize highlightLines to a Set for O(1) lookups
const highlightSet = new Set(highlightLines.map((n) => Number(n)));
---

<div class="modern-code-block">
  <div class="code-header">
    <span class="code-label">{title || language.toUpperCase()}</span>
    <div class="fake-buttons">
      <span></span><span></span><span></span>
    </div>
  </div>
  <pre
    class="code-content"><code class={`language-${language}`}>{
      lines.map((line, index) => {
        const lineNumber = index + 1;
        const isHighlighted = highlightSet.has(lineNumber);
        return (
          <span class={isHighlighted ? "line highlight" : "line"}>
            {line}
            {index < lines.length - 1 ? "\n" : ""}
          </span>
        );
      })
    }</code></pre>
</div>

<style>
  .modern-code-block {
    margin: 1.25rem 0;
    background-color: var(--color-code-bg);
    border-radius: 8px;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.5;
    box-shadow: var(--shadow);
    overflow: hidden;
  }

  .code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: var(--color-sidebar-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .code-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .fake-buttons {
    display: flex;
    gap: 6px;
  }

  .fake-buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: block;
  }

  .fake-buttons span:nth-child(1) {
    background-color: var(--color-mac-red);
  }

  .fake-buttons span:nth-child(2) {
    background-color: var(--color-mac-yellow);
  }

  .fake-buttons span:nth-child(3) {
    background-color: var(--color-mac-green);
  }

  .code-content {
    margin: 0;
    padding: 1rem;
    background-color: var(--color-card-bg);
    overflow-x: auto;
  }

  .code-content code {
    display: block;
    white-space: pre;
  }

  .code-content .line {
    display: inline;
  }

  .code-content .line.highlight {
    display: inline-block;
    background-color: rgba(255, 255, 0, 0.2);
    border-left: 3px solid var(--color-accent);
    margin-left: -1rem;
    padding-left: calc(1rem - 3px);
    margin-right: -1rem;
    padding-right: 1rem;
    width: calc(100% + 2rem);
  }
</style>
