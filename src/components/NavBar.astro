---
import { type CollectionEntry } from "astro:content";
import websecLogo from "../assets/websec-logo.png";
import NavDropdown from "./NavDropdown.astro";
import { COLLECTION_LABELS, type ValidCollection } from "../utils/constants";

interface Props {
  mysqlEntries?: CollectionEntry<"mysql">[];
  mssqlEntries?: CollectionEntry<"mssql">[];
  oracleEntries?: CollectionEntry<"oracle">[];
  postgresqlEntries?: CollectionEntry<"postgresql">[];
  extrasEntries?: CollectionEntry<"extras">[];
}

// Get entries from props, defaulting to empty arrays
const {
  mysqlEntries = [],
  mssqlEntries = [],
  oracleEntries = [],
  postgresqlEntries = [],
  extrasEntries = [],
} = Astro.props;

type AnyEntry = CollectionEntry<ValidCollection>;

// Helper function to group entries by category
function groupByCategory(entries: AnyEntry[]) {
  return entries.reduce((acc: Record<string, AnyEntry[]>, entry) => {
    const category = entry.data.category;
    if (!acc[category]) {
      acc[category] = [];
    }
    acc[category].push(entry);
    return acc;
  }, {});
}

// Group entries by category
const entriesByCategory = {
  mysql: groupByCategory(mysqlEntries),
  mssql: groupByCategory(mssqlEntries),
  oracle: groupByCategory(oracleEntries),
  postgresql: groupByCategory(postgresqlEntries),
};

// Sort each category's entries by order
(Object.keys(entriesByCategory) as Array<keyof typeof entriesByCategory>).forEach((type) => {
  const categoryGroup = entriesByCategory[type];
  Object.keys(categoryGroup).forEach((category) => {
    categoryGroup[category].sort((a: AnyEntry, b: AnyEntry) => a.data.order - b.data.order);
  });
});

// Sort categories alphabetically
const categoriesByType = {
  mysql: Object.keys(entriesByCategory.mysql).sort(),
  mssql: Object.keys(entriesByCategory.mssql).sort(),
  oracle: Object.keys(entriesByCategory.oracle).sort(),
  postgresql: Object.keys(entriesByCategory.postgresql).sort(),
};

// Filter out external links from extras
const resourceLinks = extrasEntries.filter((entry) => entry.data.title === "External Resources");
const otherExtras = extrasEntries.filter((entry) => entry.data.title !== "External Resources");

// Current path to highlight active link
const currentPath = Astro.url.pathname;

// Helper function for exact path matching (handles trailing slashes and BASE_URL)
function isActivePath(section: string, slug: string): boolean {
  const entryPath = `${import.meta.env.BASE_URL}${section}/${slug}`.replace(/\/+$/, "");
  const normalizedCurrentPath = currentPath.replace(/\/+$/, "");
  return normalizedCurrentPath === entryPath;
}
