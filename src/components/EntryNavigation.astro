---
import type { ValidCollection } from "../utils/constants";
import type { AdjacentEntry } from "../utils/entryUtils";
import { getEntryURL } from "../utils/entryUtils";

interface Props {
  collection: ValidCollection;
  previous: AdjacentEntry | null;
  next: AdjacentEntry | null;
}

const { collection, previous, next } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

const previousUrl = previous ? getEntryURL(collection, previous.slug, baseUrl) : null;
const nextUrl = next ? getEntryURL(collection, next.slug, baseUrl) : null;
---

<nav class="entry-navigation" aria-label="Entry navigation">
  {
    previous && previousUrl ? (
      <a href={previousUrl} class="nav-link nav-previous">
        <div class="nav-arrow-wrapper">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="nav-icon"
            aria-hidden="true"
          >
            <line x1="19" y1="12" x2="5" y2="12" />
            <polyline points="12 19 5 12 12 5" />
          </svg>
        </div>
        <div class="nav-content">
          <span class="nav-label">Previous</span>
          <span class="nav-title">{previous.title}</span>
        </div>
      </a>
    ) : (
      <span class="nav-spacer" />
    )
  }

  {
    next && nextUrl ? (
      <a href={nextUrl} class="nav-link nav-next">
        <div class="nav-content">
          <span class="nav-label">Next</span>
          <span class="nav-title">{next.title}</span>
        </div>
        <div class="nav-arrow-wrapper">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="nav-icon"
            aria-hidden="true"
          >
            <line x1="5" y1="12" x2="19" y2="12" />
            <polyline points="12 5 19 12 12 19" />
          </svg>
        </div>
      </a>
    ) : (
      <span class="nav-spacer" />
    )
  }
</nav>

<style>
  .entry-navigation {
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .nav-link {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background-color: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    flex: 1;
    min-width: 0; /* Important for preventing grid blowout */
    box-shadow: var(--shadow);
  }

  .nav-link:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  /* Specific grid layouts for prev/next */
  .nav-previous {
    grid-template-columns: auto 1fr;
    text-align: left;
  }

  .nav-next {
    grid-template-columns: 1fr auto;
    text-align: right;
  }

  /* Arrow wrapper */
  .nav-arrow-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: var(--color-background);
    color: var(--color-text-muted);
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
    flex-shrink: 0;
  }

  .nav-link:hover .nav-arrow-wrapper {
    background-color: var(--color-primary);
    color: white;
  }

  /* Make arrows move slightly on hover */
  .nav-previous:hover .nav-icon {
    transform: translateX(-2px);
  }

  .nav-next:hover .nav-icon {
    transform: translateX(2px);
  }

  .nav-icon {
    transition: transform 0.2s ease;
  }

  .nav-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 0;
    flex: 1;
  }

  .nav-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light);
  }

  .nav-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-heading-2);
    /* Multi-line truncation with fallbacks */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    /* -webkit-line-clamp supported in Firefox 68+; older browsers fall back to text-overflow */
    line-height: 1.4;
  }

  .nav-link:hover .nav-title {
    color: var(--color-primary);
  }

  .nav-spacer {
    flex: 1; /* Spacer takes remaining space if one side is missing */
  }

  @media (max-width: 650px) {
    .entry-navigation {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-link {
      width: 100%;
      max-width: 100%;
    }

    .nav-next {
      flex-direction: row;
      text-align: right;
    }
  }
</style>
