---
/**
 * NavGitHubLink Component
 * GitHub repository link with icon
 *
 * Props:
 *   githubUrl - Optional URL to override the default GitHub repository
 */
interface Props {
  githubUrl?: string;
}

// Default GitHub URL - can be overridden via prop or environment variable
const defaultGitHubUrl = "https://github.com/WebsecLabs/sql-injection-knowledge-base";

// Normalize prop: treat empty/whitespace-only strings as undefined so fallbacks apply
const rawGithubUrl = Astro.props.githubUrl;
const normalizedProp = rawGithubUrl?.trim() || undefined;
const githubUrl = normalizedProp || import.meta.env.PUBLIC_GITHUB_URL || defaultGitHubUrl;

// Allowed GitHub hostnames (lowercase, no trailing dot)
const ALLOWED_GITHUB_HOSTS = ["github.com", "www.github.com"] as const;
const GITHUB_ENTERPRISE_SUFFIX = ".github.com";

/**
 * Normalize a hostname for comparison:
 * - Convert to lowercase
 * - Remove trailing dot (FQDN format)
 */
function normalizeHostname(hostname: string): string {
  return hostname.toLowerCase().replace(/\.$/, "");
}

/**
 * Check if a hostname is a valid GitHub host.
 * Accepts github.com, www.github.com, or GitHub Enterprise hosts (*.github.com)
 */
function isValidGitHubHost(hostname: string): boolean {
  const normalized = normalizeHostname(hostname);
  return (
    ALLOWED_GITHUB_HOSTS.includes(normalized as (typeof ALLOWED_GITHUB_HOSTS)[number]) ||
    normalized.endsWith(GITHUB_ENTERPRISE_SUFFIX)
  );
}

/**
 * Validate URL format: must be a well-formed http/https URL
 * pointing to a GitHub host (github.com or GitHub Enterprise)
 */
function isValidHttpUrl(urlString: string): boolean {
  try {
    const url = new URL(urlString);
    const hasValidProtocol = url.protocol === "http:" || url.protocol === "https:";
    const hasValidHost = isValidGitHubHost(url.hostname);
    return hasValidProtocol && hasValidHost;
  } catch {
    return false;
  }
}

const hasValidUrl = isValidHttpUrl(githubUrl);

// Dev-only warning for invalid URLs to aid debugging
if (import.meta.env.DEV && !hasValidUrl) {
  const source = normalizedProp
    ? "prop"
    : import.meta.env.PUBLIC_GITHUB_URL
      ? "PUBLIC_GITHUB_URL env"
      : "default";
  console.warn(
    `[NavGitHubLink] Invalid GitHub URL: "${githubUrl}" (source: ${source}). ` +
      `URL must be http(s) and point to github.com or a GitHub Enterprise host (*.github.com).`
  );
}
---

{
  hasValidUrl && (
    <li class="nav-item">
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="nav-link github-link">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <title>GitHub</title>
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
        </svg>
        GitHub
      </a>
    </li>
  )
}
