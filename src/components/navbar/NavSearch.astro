---
/**
 * NavSearch Component
 * Search input with icon for the navbar
 */
import { normalizeBaseUrl } from "../../utils/pathUtils";

interface Props {
  baseUrl: string;
}

const { baseUrl } = Astro.props;
const safeBaseUrl = normalizeBaseUrl(baseUrl);
---

<div class="search-container">
  <svg
    class="search-icon"
    xmlns="http://www.w3.org/2000/svg"
    width="18"
    height="18"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <circle cx="11" cy="11" r="8"></circle>
    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
  </svg>
  <form id="navbar-search-form" action={`${safeBaseUrl}/search`} method="get">
    <input
      type="text"
      id="navbar-search-input"
      name="q"
      placeholder="Search..."
      aria-label="Search the knowledge base"
      autocomplete="off"
    />
  </form>
</div>
