---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import EntryList from "../components/EntryList.astro";
import Tabs from "../components/Tabs.astro";
import { COLLECTION_TYPES, COLLECTION_LABELS } from "../utils/constants";

// Get entries from all collections
const mysqlEntries = await getCollection("mysql");
const mssqlEntries = await getCollection("mssql");
const oracleEntries = await getCollection("oracle");
const extrasEntries = await getCollection("extras");

// Map entries to a convenient object
const entries = {
  mysql: mysqlEntries,
  mssql: mssqlEntries,
  oracle: oracleEntries,
  extras: extrasEntries,
};

// Count total entries
const totalEntries =
  mysqlEntries.length + mssqlEntries.length + oracleEntries.length + extrasEntries.length;

// Count actual database platforms (collections with at least one entry)
const activeDatabaseCount = [
  mysqlEntries.length > 0,
  mssqlEntries.length > 0,
  oracleEntries.length > 0,
].filter(Boolean).length;
---

<Layout
  title="SQL Injection Knowledge Base | Home"
  showSidebar={false}
  collections={{
    mysqlEntries,
    mssqlEntries,
    oracleEntries,
    extrasEntries,
  }}
>
  <div class="home-intro" transition:animate="slide">
    <h1 transition:name="page-title">SQL Injection Knowledge Base</h1>
    <p class="lead" transition:animate="fade">
      A comprehensive resource for SQL injection techniques, examples, and bypasses across multiple
      database platforms.
    </p>
    <div class="stats" transition:animate="fade">
      <div class="stat-item">
        <span class="stat-value">{totalEntries}</span>
        <span class="stat-label">Knowledge Base Entries</span>
      </div>
      <div class="stat-item">
        <span class="stat-value">{activeDatabaseCount}</span>
        <span class="stat-label">Database Platforms</span>
      </div>
      <div class="stat-item">
        <span class="stat-value">100%</span>
        <span class="stat-label">Open Source Resources</span>
      </div>
    </div>

    <div class="cta-container">
      <a href={`${import.meta.env.BASE_URL}browse?type=mysql`} class="explore-button">
        <span>Explore Documentation</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>

  <div class="database-tabs" transition:animate="slide">
    <Tabs defaultTab="mysql">
      <Fragment slot="tab-list">
        {
          COLLECTION_TYPES.map((type) => (
            <li class="tab-item" data-tab={type}>
              {COLLECTION_LABELS[type]}
            </li>
          ))
        }
      </Fragment>

      {
        COLLECTION_TYPES.map((type) => (
          <div class="tab-content" data-tab={type}>
            <EntryList
              entries={entries[type]}
              title={type === "extras" ? "Additional Resources" : COLLECTION_LABELS[type]}
              collectionType={type}
            />
          </div>
        ))
      }
    </Tabs>
  </div>
</Layout>

<style>
  .home-intro {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    padding: 2.5rem;
    margin-bottom: 3rem;
    text-align: center;
  }

  .home-intro h1 {
    margin-top: 0;
    font-size: 2.5rem;
    color: var(--color-primary);
    border-bottom: none;
  }

  .lead {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 1rem auto 2rem;
    color: var(--color-text-muted);
  }

  .stats {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 3.5rem;
    margin: 2.5rem auto;
    max-width: 800px;
  }

  .cta-container {
    margin-top: 2.5rem;
    text-align: center;
  }

  .explore-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background-color: var(--color-primary);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: 0 4px 6px rgba(49, 130, 206, 0.2);
  }

  .explore-button:hover {
    background-color: #2c73b4;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(49, 130, 206, 0.3);
    text-decoration: none;
  }

  .explore-button svg {
    transition: transform 0.2s ease;
  }

  .explore-button:hover svg {
    transform: translateX(3px);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 150px;
    text-align: center;
    position: relative;
  }

  .stat-value {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
    margin-bottom: 0.75rem;
  }

  .stat-label {
    font-size: 1rem;
    color: var(--color-text-muted);
    font-weight: 500;
    line-height: 1.3;
    max-width: 140px;
  }

  .database-tabs {
    margin-top: 2rem;
  }

  /* Styles for the Tabs component integration */
  :global(.tab-list) {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    border-bottom: 1px solid var(--color-border);
    overflow-x: auto;
    scrollbar-width: none;
  }

  :global(.tab-list::-webkit-scrollbar) {
    display: none;
  }

  :global(.tab-item) {
    padding: 1rem 1.5rem;
    cursor: pointer;
    font-weight: 600;
    color: var(--color-text-muted);
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  :global(.tab-item:hover) {
    color: var(--color-primary);
    background-color: rgba(66, 153, 225, 0.05);
  }

  :global(.tab-item.active) {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  :global(.tab-content) {
    display: none;
    animation: fadeIn 0.5s ease;
    margin-top: 1rem;
  }

  :global(.tab-content.active) {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .home-intro {
      padding: 1.5rem;
    }

    .home-intro h1 {
      font-size: 2rem;
    }

    .lead {
      font-size: 1.1rem;
    }

    .stats {
      gap: 2rem;
      flex-direction: column;
      align-items: center;
      margin: 2rem auto;
    }

    .stat-item {
      min-width: 200px;
      padding: 0.75rem 0;
    }

    .stat-value {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.95rem;
      max-width: 180px;
    }

    .cta-container {
      margin-top: 1.5rem;
    }

    .explore-button {
      width: 100%;
      justify-content: center;
    }

    :global(.tab-item) {
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
