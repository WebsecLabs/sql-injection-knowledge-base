# Build Configuration
# NODE_ENV: Environment mode (development | production)
NODE_ENV=development
# STANDALONE: Build as standalone site without external services (true | false)
STANDALONE=false
# SITE_URL: Full URL where the site will be hosted (e.g., https://example.com)
SITE_URL=https://example.com

# E2E Testing
# BASE_URL: Base URL for E2E tests (e.g., http://localhost:8080/sql-injection-knowledge-base/)
BASE_URL=http://localhost:8080/sql-injection-knowledge-base/
# PLAYWRIGHT_WORKERS: Number of parallel browser workers for E2E tests (integer, default: 2)
PLAYWRIGHT_WORKERS=2
# PLAYWRIGHT_WEBSERVER_TIMEOUT: Timeout in milliseconds for webserver startup (integer, default: 120000)
PLAYWRIGHT_WEBSERVER_TIMEOUT=120000

# Docker Container Deployment
# SQLI_KB_NETWORK: Docker network name for container connectivity
SQLI_KB_NETWORK=websec-site_websec-network
# SQLI_KB_PORT: Port number to expose the container on (integer, default: 8080)
SQLI_KB_PORT=8080
# SQLI_KB_SITE_URL: Site URL for Docker deployment (e.g., http://localhost:8080)
SQLI_KB_SITE_URL=http://localhost:8080

# GitHub Actions
# CI: Set to true when running in CI environment (true | false)
CI=false
